      .position__block
        span.position__description Положение
        .position__button
          a(href="#").position__first
          a(href="#").position__second
        .position__watermark-one.clearfix
          .watermark-wrap
            .watermark-table
              .watermark-row
                .watermark-col
                  a(href="#" data-pos="left top").watermark-link
