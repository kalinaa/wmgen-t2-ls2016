                  a(href="#").watermark-link
                .watermark-col
                  a(href="#").watermark-link
                .watermark-col
                  a(href="#").watermark-link
          .watermark-property
            .position__gorizontal
              span.position__name-plus X
              input(type="text" name="text" value="0").position__input
