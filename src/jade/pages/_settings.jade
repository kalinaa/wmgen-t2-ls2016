                  a(href="#" data-pos="right bottom").watermark-link
          .watermark-property
            .position__gorizontal
              span.position__span X
              input(type="text" name="text" value="0").position__input.input_x
              .position__coordinates 
                a(href="").position__top
                a(href="").position__bottom
            .position__vertical
              span.position__span Y
              input(type="text" name="text" value="0").position__input.input_y
              .position__coordinates
                a(href="").position__top
                a(href="").position__bottom
